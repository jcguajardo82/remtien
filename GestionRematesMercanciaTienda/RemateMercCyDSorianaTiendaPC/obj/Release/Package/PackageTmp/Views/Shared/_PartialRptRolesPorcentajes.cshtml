
<div class="table-responsive">
    <table class="table table-striped table-hover" id="tblCatCad">
        <thead>
            <tr>
                <th>Categoría</th>
                <th>Periodicidad</th>
                <th>Dia del Mes</th>
                <th>Dia de la Semana</th>
                <th>Dias de Aviso</th>  
                <th></th>     
                <th></th>              
            </tr>
        </thead>
        <tbody id="tblCatCadbody">

        </tbody>
</table>


    <div class="modal fade" id="Editar" tabindex="-1" role="dialog" aria-labelledby="EditarLabel">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Cerrar"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title" id="EditarLabel">Editar Categoria</h4>
                </div>
                <div class="modal-body">
                    <div class="row">
                        <h4 class="modal-title" id="EditarLabel">Editar Categoria</h4>
                    </div>
                    <div class="row">
                        <div class="col-lg-offset-3 col-lg-6">
                            <div class="form-group">
                                <label for="modTxtCategoría">Categoría:</label>
                                @Html.DropDownList("Cat_FtoTienda_Modal", (SelectList)ViewData["ddlCategoriaFmoTienda"], new { @class = "form-control" })
                            </div>
                            <div class="form-group">
                                <label for="modTxtCategoría">Tipo Mercancía: </label>
                                @Html.DropDownList("Tipo_Mcia_Modal", (SelectList)ViewData["ddlTipoMcia"], new { @class = "form-control" })
                            </div>
                            <div class="form-group">
                                <label for="modTxtPeriodicidad">Periodicidad:</label>
                                @Html.DropDownList("Id_Periodicidad_Modal", (SelectList)ViewData["ddlPeriodicidad"], new { @class = "form-control" })
                            </div>
                            <div class="form-group">
                                <label for="modTxtDiaMes">Dia del Mes:</label>
                                @Html.TextBox("modTxtDiaMes".Trim(), null, new { @class = "form-control", @placeholder = "Dia del Mes" })
                                <span class="label-danger error" style="visibility:collapse">El dia del mes no debe ser 0</span>
                            </div>
                            <div class="form-group">
                                <label for="modTxtDiaSemana">Dia de la Semana:</label>
                                @Html.DropDownList("modTxtDiaSemana", (SelectList)ViewData["ddlDiaSemana"], new { @class = "form-control" })   
                                <span class="label-danger error" style="visibility:collapse">Falta definir dia de la Semana</span>                             
                            </div>
                            <div class="form-group">
                                <label for="modTxtDiaAviso">Dias de Aviso:</label>
                                @Html.TextBox("modTxtDiaAviso".Trim(), null, new { @class = "form-control", @placeholder = "Dias de Aviso" })
                                <span class="label-danger error" style="visibility:collapse">Falta definir dias de Aviso</span>                                
                            </div>
                            <input type="hidden" class="form-control" id="modTxtIdKey">
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default " data-dismiss="modal">Cerrar</button>                    
                    <button id="btnModGuardar" type="button" class="btn btn-default btnEdit" data-dismiss="modal">Guardar</button>
                </div>
            </div>
        </div>
    </div>

    <div class="modal fade" id="modalCancelacionCon" tabindex="-1" role="dialog" aria-labelledby="modalTitle" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                <h4 class="modal-title"> Elimar Categoría</h4>
            </div>
            <div class="modal-body">            
                <div id="divRenderCancelar">
                  Esta Seguro de Eliminar la categoria y todos sus dependencias  
                </div>
            </div>
            <input type="hidden" class="form-control" id="modTxtIdCatDel">
            <div class="modal-footer">
                <button type="button" class="btn btn-default " data-dismiss="modal">No</button>
                <button id="btnModGuardar" type="button" class="btn btn-default btndelCat" data-dismiss="modal">Si</button>
            </div>
        </div>
    </div>
</div>

    <div class="modal fade" id="modalAviso" >
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                    <h4 class="modal-title"> Categoría</h4>
                </div>
                <div class="modal-body">
                    <div id="divRenderCancelar">Las Categorías fueron guardadas con Exito
                    </div>
                </div>
                <input type="hidden" class="form-control" id="modTxtIdCatDel">
                <div class="modal-footer">                    
                    <button id="" type="button" class="btn btn-default btndelCat" data-dismiss="modal">OK</button>
                </div>
            </div>
        </div>
    </div>

    <div class="modal fade" id="AddPorcentaje" tabindex="-1" role="dialog" aria-labelledby="EditarLabel">
        <div class="modal-dialog modal-lg" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Cerrar"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title" id="EditarLabel">Tabla de  % de Remate y Merma por Categoría</h4>
                </div>
                <div class="modal-body">
                    <div class="row">                        

                        <form class="form-inline">
                            <div class="form-group">
                                <label for="ModPorcFmtoTienda">Fmto Tienda</label>
                                <input type="text" class="form-control" id="ModPorcFmtoTienda">
                            </div>
                            <div class="form-group">
                                <label for="ModPorcTipoMercancia">Tipo Mercancia</label>
                                <input type="text" class="form-control" id="ModPorcTipoMercancia">
                            </div>  
                            <div class="form-group">
                                <label for="ModPorcCategoria">Categoría</label>
                                <input type="text" class="form-control" id="ModPorcCategoria">
                            </div>  
                                                    
                        </form>

                    </div>                    
                    <br />                  
                    <div class="row">
                        <div class="form-group">
                            <div class="col-lg-12 text-right">
                                <div class="form-group">
                                    <button class="btn btn-success btn-addporccat" type="button">Agregar </button>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div id="Panel_CatPorcentaje_Content"></div>
                        <table class="table table-striped table-hover" id="tblCatPorc">
                            <thead>
                                <tr>                                    
                                    <th>A:</th>
                                    <th>% Remate</th>
                                    <th>% Merma</th>                                   
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody id="tbodyCatPorc"> </tbody>
                        </table>
                    </div>
                        <input type="hidden" class="form-control" id="modTxtIdKeyCat">
                    </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default " data-dismiss="modal">Cerrar</button>
                    <button id="btnAddPorcGuardar" type="button" class="btn btn-default btnAddPorc" data-dismiss="modal">Guardar</button>
                </div>
            </div>
        </div>
    </div>

    <div class="modal fade" id="modalBorrarPorcentajeCapturado" tabindex="-1" role="dialog" aria-labelledby="modalTitle" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
