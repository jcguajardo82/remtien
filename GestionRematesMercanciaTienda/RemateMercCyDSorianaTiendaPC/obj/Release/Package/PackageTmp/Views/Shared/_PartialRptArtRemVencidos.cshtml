
@model IEnumerable<EDReciboTiendaSoriana.EDReportes.EDRArtRemVen>
@*@{
    var grid = new WebGrid(Model, canPage: false, canSort: false);
}



@grid.GetHtml(
            tableStyle: "table table-striped table-bordered table-hover dataTables-example gvv",
            columns:

                grid.Columns(


                    grid.Column("Cnsc", "Cnsc"),
                    grid.Column("CodigoBarra", "Código Barra"),
                    grid.Column("CodigoUnico", "Código Unico"),
                    grid.Column("Descripcion", "Descripción"),
                    grid.Column("Lote", "Lote"),
                    grid.Column("Precio", "Precio"),                   
                    grid.Column("FechaCaducidad", "Fecha Caducidad"),
                    grid.Column("FechaCaptura", "Fecha Captura"),
                    grid.Column("DiasAntes", "Dias Antes"),
                    grid.Column("Etapa", "Etapa"),
                    grid.Column("RangoIni", "Rango Inicial"),
                    grid.Column("RangoFinal", "Rango Final"),
                    grid.Column("PorcOfta", "Porc. Ofta"),
                    grid.Column("PorcAfecta", "Porc. Afecta"),
                    grid.Column("ImpAfecta", "Imp. Afecta"),
                    grid.Column("FolioAfecta", "Folio Afecta")

                            )

               )*@

<style>
    .thArtRemVen {
        padding-left:5px;
        padding-right:5px;
        text-align:center;
        min-width:115px;
        max-width:225px;
    }
     .thArtRemVen_det {
        padding-left:5px;
        padding-right:5px;
        text-align:right;
        min-width:115px;
        max-width:225px;
    }
    .thArtRemVenDes {
        padding-left:5px;
        padding-right:5px;
        text-align:center;
        min-width:225px;
        max-width:225px;
    }
</style>
<table class="table table-striped table-bordered table-hover dataTables-example gvv" >
    <thead>
        <tr>
            <th class="thArtRemVen">No</th>
            <th class="thArtRemVen">Código Barra</th>
            <th class="thArtRemVen">Código Unico</th>
            <th class="thArtRemVenDes">Descripción</th>
            <th class="thArtRemVen">Lote</th>
            <th class="thArtRemVen">Precio</th>
            <th class="thArtRemVen">Fecha Caducidad</th>
            <th class="thArtRemVen">Fecha Captura</th>
            <th class="thArtRemVen">Dias Antes</th>
            <th class="thArtRemVen">Etapa</th>
            <th class="thArtRemVen">Rango Inicial</th>
            <th class="thArtRemVen">Rango Final</th>
            <th class="thArtRemVen">Porc. Ofta</th>
            <th class="thArtRemVen">Porc. Afecta</th>
            <th class="thArtRemVen">Imp. Afecta</th>
            <th class="thArtRemVen">Folio Afecta</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Cnsc</td>
                <td class="thArtRemVen_det">@item.CodigoBarra</td>
                <td class="thArtRemVen_det">@item.CodigoUnico</td>
                <td>@item.Descripcion</td>
                <td class="thArtRemVen_det">@item.Lote</td>
                <td class="thArtRemVen_det">@item.Precio</td>
                <td class="thArtRemVen_det">@item.FechaCaducidad</td>
                <td class="thArtRemVen_det">@item.FechaCaptura</td>
                <td class="thArtRemVen_det">@item.DiasAntes</td>
                <td class="thArtRemVen_det">@item.Etapa</td>
                <td class="thArtRemVen_det">@item.RangoIni</td>
                <td class="thArtRemVen_det">@item.RangoFinal</td>
                <td class="thArtRemVen_det">@item.PorcOfta</td>
                <td class="thArtRemVen_det">@item.PorcAfecta</td>
                <td class="thArtRemVen_det">@item.ImpAfecta</td>
                <td class="thArtRemVen_det">@item.FolioAfecta</td>

            </tr>
        }
    </tbody>
    
</table>
